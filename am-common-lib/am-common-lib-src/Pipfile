[scripts]
flint = """\
python _combo_shell.py "
  ruff check . \
    --select UP,I,F,A,B,C4,ERA,PIE,SIM,RET,TRY,PL \
    --fix-only \
    --quiet \
    --exit-zero \
  && docformatter . \
  || docformatter . \
  && ruff format . \
  && python _prettify.py \
  && ruff check . \
  && pydoclint am_common_lib \
  && mypy ."
"""
ruff-unsafe = """\
ruff check . \
  --select UP,I,F,A,B,C4,ERA,PIE,SIM,RET,TRY,PL \
  --fix-only \
  --unsafe-fixes \
  --quiet \
  --exit-zero
"""

